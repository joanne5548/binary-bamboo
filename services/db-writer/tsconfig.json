{
  "compilerOptions": {
    "outDir": "./dist",

    // Environment Settings
    "target": "esnext",
    "module": "nodenext",
    "types": ["node"],
    
    "baseUrl": "./",
    "paths": {
      "@internal/interfaces/*": ["../libs/interfaces/*"]
    },

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
}
